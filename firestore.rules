rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Create: anyone can create their own doc
      // role must be "student" or absent at creation
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && (
                      !('role' in request.resource.data)
                      || request.resource.data.role == "student"
                    );

      // Read: users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;

      // Update: user can update their own doc
      // but can only elevate to teacher if their verified email ends with @gusd.net
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && (
                      // same role -> always fine
                      request.resource.data.role == resource.data.role
                      ||
                      // elevate to teacher -> must be verified GUSD staff
                      (
                        resource.data.role != "teacher"
                        && request.resource.data.role == "teacher"
                        && request.auth.token.email_verified == true
                        && request.auth.token.email.matches('.*@gusd\\.net$')
                      )
                    );
    }
  }
}
